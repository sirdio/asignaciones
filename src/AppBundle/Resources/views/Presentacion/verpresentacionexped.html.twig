{% extends '::base.html.twig' %}
{% block title %}Experiencia Pedagógica{% endblock %}
{% block body %}  
   {% for flashMessage in app.session.flashbag.get('mensaje') %}
    <span class="alert-danger">
        {{ flashMessage }}
        <hr />
    </span>
    {% endfor %}
   <div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-4">
					<div class="alert  alert-info">
						{#<img class="img-thumbnail" alt="Bootstrap Thumbnail First" src="http://lorempixel.com/output/people-q-c-600-200-1.jpg">#}
						<div class="caption">
						    {#<h1 class="text-primary"> Thumbnail label </h1>#}
							{#<h2 class="text-primary"> Thumbnail label </h2>#}
							
							<h3 class="text-primary"> Establecimiento: {{expe.escuela.nombesc}} </h3>
							<h4 class="text-primary"> Año en que se Desarrollo: {{expe.adpresentacion}}</h4>
							<h3 class="text-primary"> Categoría:{{expe.catpresentacion}} </h3>
							<p>
								{{expe.esppresentacion}}
							</p>

						</div>
					</div>
				</div>
                <div class="col-md-4">
                    <div class="form-top">
                        <div class="form-top-left">
                        	<h3>Votar Trabajo </h3>
                            <p>ingrese D.N.I. para confirmar su voto:</p>
                        </div>
                    </div>
                    <div class="form-bottom">
			             <form role="form" action="{{path('VerPresentacionEXPed',{ 'id': expe.id})}}" method="post" class="login-form">
			                <div class="form-group">
			                	<label class="sr-only" for="form-username">D.N.I.:</label>
			                       	<input type="text" name="dni" placeholder="D.N.I..." class="form-username form-control" id="form-username">
			                    </div>
			                    <div class="form-group">
                                    <div class="col-md-4">
                                        <button id="singlebutton" name="confirmarvoto" value="Confirmar" class="btn btn-primary">Confirmar</button>
                                     </div>
                                </div>
			             </form>
		            </div>
                </div>
            </div>
		</div>
	</div>
	</div>
</div>

    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/scripts.js"></script>

{% endblock %}