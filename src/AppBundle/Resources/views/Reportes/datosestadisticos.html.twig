                                {% endif %}
                                {% if tipov == "Mencionados" %}
                                <td>{{cs.cvmencion}}</td>                                
                                {% endif %}                                
                            </tr>
                            {% endfor %}
                    </table>                
                </div>  
                <div class="panel-body">
                    <h3>Votos: Formación Profesional</h3>
                    <table class="table table-hover">
                            <tr class="warning">
                                <th>Stand Nro.</th>
                                <th>Nombre Proyecto</th>
                                <th>Establecimineto</th>
