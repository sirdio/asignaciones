{% extends '::base.html.twig' %}
{% block title %}TECNICAMENTE 2016!!!{% endblock %}
{% block body %}

<nav class="navbar navbar-default">
  <img src="{{ asset('public/img/imgtm1.jpg') }}" alt="..." class="img-responsive">
  <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li class="active"><a href="{{path('Inicio')}}">Volver <span class="sr-only">(current)</span></a></li>
        <li class="active"><a href="{{path('SelecOpcion')}}">Atras <span class="sr-only">(current)</span></a></li>
      </ul>
  </div><!-- /.container-fluid -->
</nav>

<section class="Container">
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3>TécnicaMente 2016 Proyectos {{tipov}}</h3>
				</div>
				<div class="panel-body">
				    <h3>Votos : Ciclo Básico</h3>
                    <table class="table table-hover">
                            <tr class="info">
                                <th>Stand Nro.</th>
                                <th>Nombre Proyecto</th>
                                <th>Establecimineto</th>
                                <th>Jurisdicción</th>
                                <th>Cantidad de Votos</th>
                            </tr>
                            {% for cb in trabajocb %}                             
                            <tr class="info">
                                <th>{{cb.stand}}</th>
                                <th>{{cb.nombproyecto}}</th>
                                <td>{{cb.escuela.nombesc}}</td>
                                <td>{{cb.escuela.jurisdiccion}}</td>
                                {% if tipov == 'Destacados' %}
                                <td>{{cb.cvdestacado}}</td>                                
                                {% endif %}
                                {% if tipov == 'Mencionados' %}
                                <td>{{cb.cvmencion}}</td>                                
                                {% endif %}                                
                            </tr>
                            {% endfor %}
                    </table>				
				</div>
                <div class="panel-body">
                    <h3>Votos: Ciclo Superior</h3>
                    <table class="table table-hover">
                            <tr class="danger">
                                <th>Stand Nro.</th>
