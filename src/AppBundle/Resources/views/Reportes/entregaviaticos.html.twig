




    {% for esc in escuela %}
        {{esc.nombesc}}<br>
        --------------------------------------------------------------- <br>
        {% for direc in directivo %}
            {%if esc.id == direc.idesc%}
                {{direc.dni}} - {{direc.apellido}} - {{direc.nombre}} <br>
            {%endif%}
        {% endfor %}
        {% for trab in trabajo %}
            {%if esc.id == trab.escuela.id%}
                {{trab.encargado.dni}} - {{trab.encargado.apellido}} - {{trab.encargado.nombre}} <br>
            {%endif%}
            {% for est in estudiante %}
                {%if trab.id == est.trabajo.id and esc.id == trab.escuela.id %}
                    {{est.dni}} - {{est.apellido}} - {{est.nombre}} <br>
                {%endif%}
            {% endfor %}    
        {% endfor %}
        {% for pres in presentacion %}
            {% for doc in docente %}
                {%if pres.id == doc.presentacion.id and esc.id == pres.escuela.id %}
                    {{doc.dni}} - {{doc.apellido}} - {{doc.nombre}} <br>
                {%endif%}
            {% endfor %}    
        {% endfor %}        
        --------------------------------------------------------------- <br>
    {% endfor %}