{% extends '::base.html.twig' %}
{% block title %}Bienvenido a TECNICAMENTE 2016!!!{% endblock %}
{% block body %}

<nav class="navbar navbar-default">
    <img src="{{ asset('public/img/imgtm1.jpg') }}" alt="..." class="img-responsive">
  <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li class="active"><a href="{{path('SeleccionarNivel')}}">Volver <span class="sr-only">(current)</span></a></li>
      </ul>
  </div><!-- /.container-fluid -->
</nav>

<section class="Container">
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3>TécnicaMente 2016</h3>
				</div>
				<div class="panel-body">
				    <h3>Resultados</h3>
                    <table class="table table-hover">
                            <tr class="danger">
                                <th>Establecimiento</th>
                                <th>Año de Desarrollo del Trabajo</th>
                                <th>Categoría</th>
                                <th>Especificación</th>
                                <th>Cantidad de Votos</th>
                            </tr>
                        {% for presr in presresultado %}
                            <tr class="danger">
                                <td>{{presr.escuela.nombesc}}</td>
                                <td>{{presr.adpresentacion}}</td>
                                <td>{{presr.catpresentacion}}</td>
                                <td>{{presr.esppresentacion}}</td>
                                <td>{{presr.cantvoto}}</td>
                            </tr>
                        {% endfor %}
                    </table>				
				</div>
			</div>
		</div>
	</div>
</section>


{% endblock %}