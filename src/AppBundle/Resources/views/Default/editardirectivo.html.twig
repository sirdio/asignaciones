{% extends '::base.html.twig' %}
{% block title %}Modoficar Usuario{% endblock %}
{% block body %}

<nav class="navbar navbar-default">
  <img src="{{ asset('public/img/imgtm1.jpg') }}" alt="..." class="img-responsive">
  <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li class="active"><a href="{{path('Inicio')}}">Volver <span class="sr-only">(current)</span></a></li>
      </ul>
  </div>
</nav>
<div class="container">
     <div class="row">
          <div class="col-md-4">
          </div>
          <div class="col-md-4">
<form action="{{ path('GuardarModificacion',{'dni': directivo.dni , 'tv': directivo.tipovot }) }}" method="post" class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>Ingresar datos del Directivo</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="dni">D.N.I.:</label>  
  <div class="col-md-8">
  <input id="dni" name="dni" class="form-control input-md" required="" type="text" value="{{directivo.dni}}">
  <span class="help-block">ej.: 26587458</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="nombre">Nombre:</label>  
  <div class="col-md-8">
  <input id="nombre" name="nombre" class="form-control input-md" required="" type="text" value="{{directivo.nombre}}">
  <span class="help-block">ej.: Pedro A.</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="apellido">Apellido:</label>  
  <div class="col-md-8">
  <input id="apellido" name="apellido" class="form-control input-md" required="" type="text" value="{{directivo.apellido}}">
  <span class="help-block">ej.: López</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="cargo">Cargo:</label>  
  <div class="col-md-8">
  <input id="cargo" name="cargo" class="form-control input-md" required="" type="text" value="{{directivo.cargo}}">
  <span class="help-block">ej.: Jefa de Sección</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="teld">Teléfono:</label>  
  <div class="col-md-8">
  <input id="teld" name="teld" class="form-control input-md" required="" type="text" value="{{directivo.teld}}">
  <span class="help-block">ej.: 379-4457189</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="emaild">Email:</label>  
  <div class="col-md-8">
  <input id="emaild" name="emaild" class="form-control input-md" required="" type="text" value="{{directivo.emaild}}">
  <span class="help-block">ej.: pablo2314@hotmail.com</span>  
  </div>
</div>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="establecimiento">Establecimiento:</label>
  <div class="col-md-8">
    <select id="establecimiento" name="establecimiento" class="form-control">
      <option value="{{idesc}}">{{nombesc}}</option>
      {% for esc in escuela %}
        {% if esc.id != idesc %}
          <option value="{{esc.id}}">{{esc.nombesc}}</option>
        {% endif %}
      {% endfor %}
    </select>
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <div class="col-md-4">
    <button id="singlebutton" name="singlebutton" class="btn btn-primary">Aceptar</button>
  </div>
</div>

</fieldset>
</form>
          </div> 
          <div class="col-md-4">
          </div>
    </div>
</div> 

{% endblock %}