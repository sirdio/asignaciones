{% extends '::base.html.twig' %}
{% block title %}Modificar Usuario{% endblock %}
{% block body %}

<nav class="navbar navbar-default">
  <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li class="active"><a href="{{path('Inicio')}}">Volver <span class="sr-only">(current)</span></a></li>
      </ul>
  </div>
</nav>
<div class="container">
     <div class="row">
          <div class="col-md-4">
          </div>
          <div class="col-md-4">
<form action="{{ path('GuardarModificacion',{'dni': estudiante.dni }) }}" method="post" class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>Ingresar datos del Estudiante</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="dni">D.N.I.:</label>  
  <div class="col-md-8">
  <input id="dni" name="dni" class="form-control input-md" required="" type="text" value="{{estudiante.dni}}">
  <span class="help-block">ej.: 26587458</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="nombre">Nombre:</label>  
  <div class="col-md-8">
  <input id="nombre" name="nombre" class="form-control input-md" required="" type="text" value="{{estudiante.nombre}}">
  <span class="help-block">ej.: Pedro A.</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="apellido">Apellido:</label>  
  <div class="col-md-8">
  <input id="apellido" name="apellido" class="form-control input-md" required="" type="text" value="{{estudiante.apellido}}">
  <span class="help-block">ej.: López</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="aniocursa">Año que cursa:</label>  
  <div class="col-md-8">
  <input id="aniocursa" name="aniocursa" class="form-control input-md" required="" type="text" value="{{estudiante.aniocursa}}">
  <span class="help-block">ej.: 4to 1ra</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="especialidada">Especialidad:</label>  
  <div class="col-md-8">
  <input id="especialidada" name="especialidada" class="form-control input-md" required="" type="text" value="{{estudiante.especialidada}}">
  <span class="help-block">ej.: Inform&aacutetica</span>  
  </div>
</div>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="nivel">Nivel:</label>
  <div class="col-md-8">
    <select id="nivel" name="nivel" class="form-control">
        {% if estudiante.nivel == "cbs" %}
          <option value="cbs">Ciclo B&aacutesico Secundaria</option>
          <option value="css">Ciclo Superior Secundaria</option>
          <option value="fp">Formaci&oacuten Profesional</option>
          <option value="ts">Tecnicaturas Superiores</option>        
        {% elseif estudiante.nivel == "css" %}
          <option value="css">Ciclo Superior Secundaria</option>
          <option value="fp">Formaci&oacuten Profesional</option>
          <option value="ts">Tecnicaturas Superiores</option>                
          <option value="cbs">Ciclo B&aacutesico Secundaria</option>
        {% elseif estudiante.nivel == "fp" %}
          <option value="fp">Formaci&oacuten Profesional</option>
          <option value="ts">Tecnicaturas Superiores</option>                
          <option value="cbs">Ciclo B&aacutesico Secundaria</option>        
          <option value="css">Ciclo Superior Secundaria</option>
        {% elseif estudiante.nivel == "ts" %}
          <option value="ts">Tecnicaturas Superiores</option>                
          <option value="cbs">Ciclo B&aacutesico Secundaria</option>        
          <option value="css">Ciclo Superior Secundaria</option>
          <option value="fp">Formaci&oacuten Profesional</option>          
        {% endif%}

    </select>
  </div>
</div>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="trabajo">Trabajo:</label>
  <div class="col-md-8">
    <select id="trabajo" name="trabajo" class="form-control">
      <option value="{{idtrab}}">{{nombtrab}}</option>
      {% for trab in trabajos %}
        {% if trab.id != idtrab %}
          <option value="{{trab.id}}">{{trab.nombproyecto}}</option>
        {% endif %}
      {% endfor %}
    </select>
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <div class="col-md-4">
    <button id="singlebutton" name="singlebutton" class="btn btn-primary">Aceptar</button>
  </div>
</div>

</fieldset>
</form>
          </div> 
          <div class="col-md-4">
          </div>
    </div>
</div> 

{% endblock %}