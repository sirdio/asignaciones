  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="especialidadd">Especialidad:</label>  
  <div class="col-md-8">
  <input id="especialidadd" name="especialidadd" class="form-control input-md" required="" type="text" value="{{docente.especialidadd}}">
  <span class="help-block">ej.: T&eacutecnico Superior en Enfermer&iacutea</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="emaildoc">Email:</label>  
  <div class="col-md-8">
  <input id="emaildoc" name="emaildoc" class="form-control input-md" required="" type="text" value="{{docente.emaildoc}}">
  <span class="help-block">ej.: pablo2314@hotmail.com</span>
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="teldoc">Tel&eacutefono:</label>  
  <div class="col-md-8">
  <input id="teldoc" name="teldoc" class="form-control input-md" required="" type="text" value="{{docente.teldoc}}">
  <span class="help-block">ej.: 379-4457189</span>
  </div>
</div>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="presentacion">Presentacion:</label>
  <div class="col-md-8">
    <select id="presentacion" name="presentacion" class="form-control">
            <option value="{{idpres}}">{{nombpres}}</option>
      {% for pres in presentacion %}
          {% if pres.id != idpres %}
              <option value="{{pres.id}}">{{pres.esppresentacion}}</option>
          {% endif %}
      {% endfor %}
    </select>
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <div class="col-md-4">
    <button id="singlebutton" name="singlebutton" class="btn btn-primary">Aceptar</button>
  </div>
</div>

</fieldset>
</form>
