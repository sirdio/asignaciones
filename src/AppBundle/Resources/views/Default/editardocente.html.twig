<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="apellido">Apellido:</label>  
  <div class="col-md-8">
  <input id="apellido" name="apellido" class="form-control input-md" required="" type="text" value="{{docente.apellido}}">
  <span class="help-block">ej.: LÃ³pez</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="espacioc">Espacio Curricular:</label>  
  <div class="col-md-8">
  <input id="espacioc" name="espacioc" class="form-control input-md" required="" type="text" value="{{docente.espacioc}}">
